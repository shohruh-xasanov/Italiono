    /* Dropdown Content (Hidden by Default) */
    .dropdown-content {
      display: none;
      position: absolute;
      background-color: rgb(255,255,255);
      z-index: 1;
      border-radius: 10px;
    }
    
    /* Links inside the dropdown */
